{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    // "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vite-plugin-svg-icons/client","node"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/*.vue", "src/**/*.vue", "src/**/**/*.vue", "src/**/**/**/*.vue","./auto-imports.d.ts"],
  "exclude": ["src/main.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
